<div class="w-25 py-1">
    <input type="text"
        id="nameinput-{{uniqid}}"
        name="name"
        data-region="local_greetings/helloworld-input"
        class="form-control"
        placeholder="{{#str}}entername, local_greetings{{/str}}"
        aria-label="{{#str}}entername, local_greetings{{/str}}"
    />
</div>
<div>
    <button data-action="local_greetings/helloworld-greet_button"
            class="btn btn-primary">{{#str}}go{{/str}}
    </button>
    <button data-action="local_greetings/helloworld-reset_button"
            class="btn btn-secondary">{{#str}}reset{{/str}}
    </button>
</div>
<div class="greetuser py-2" data-region="local_greetings/helloworld-usergreeting">
</div>

{{#js}}
require(['local_greetings/greetings'], function(module) {
    module.init({{userid}});
});
{{/js}}
